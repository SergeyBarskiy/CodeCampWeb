@{
    string pattern = @"/^([\w-]+(?:\.[\w-]+)*)@((?:[\w-]+\.)*\w[\w-]{0,66})\.([a-z]{2,6}(?:\.[a-z]{2})?)$/i";
}
<div class="col-md-4 col-md-offset-4 col-sm-10 col-sm-offset-1 col-xs-12
     ">
    <form name="loginForm" novalidate="novalidate" role="form" user="form">
        <div class="h4"><strong>Register</strong></div>
        <hr>
        <div class="form-group">
            <label class="required-label">Email</label>
            <input autocomplete="off" class="form-control" ng-model="vm.model.Email" ng-pattern="@pattern" required="" name="Email" type="text">

            <div ng-messages="loginForm.Email.$error">
                <div class="text-danger error-message" ng-message="required">Email is required</div>
                <div class="text-danger error-message" ng-message="pattern">Email not in a correct format</div>
            </div>


        </div>
        <div class="form-group">
            <label class="required-label">Password</label>
            <input autocomplete="off" class="form-control" ng-model="vm.model.Password" required="" name="Password" type="password" ng-minlength="6">
            <div ng-messages="loginForm.Password.$error">
                <div class="text-danger error-message" ng-message="required">Password required</div>
                <div class="text-danger error-message" ng-message="minlength">Password must be at least 6 characters long</div>
            </div>
        </div>
        <div class="form-group">
            <label class="required-label">Confirm Password</label>
            <input autocomplete="off" class="form-control" ng-model="vm.model.ConfirmPassword" required="" name="ConfirmPassword" type="password" ng-minlength="6">
            <div ng-messages="loginForm.ConfirmPassword.$error">
                <div class="text-danger error-message" ng-message="required">Password confirmation required</div>
                <div class="text-danger error-message" ng-message="minlength">Password must be at least 6 characters long</div>
            </div>
        </div>
        <div>
            <button class="btn btn-default" ng-disabled="loginForm.$invalid" ng-click="vm.register()">
                <i class="glyphicon glyphicon-lock"></i> Register
            </button>

        </div>
    </form>
</div>

